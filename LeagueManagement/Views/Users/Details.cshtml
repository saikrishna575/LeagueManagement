                                        <div class="col-md-8">
                                            @Html.DisplayFor(model => model.PhoneNumber, new {htmlAttributes = new {@class = "form-control"}})
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.GenderId, "Gender", htmlAttributes: new {@class = "col-sm-4 control-label"})
                                        <div class="col-md-8">
                                            @Html.DisplayFor(model => model.Gender.Name, new {htmlAttributes = new {@class = "form-control"}})
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        @Html.LabelFor(model => model.Birthday, htmlAttributes: new {@class = " col-sm-4 control-label"})
