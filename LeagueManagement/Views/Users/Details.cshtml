                                        <div class="col-md-8">
                                            @Html.DisplayFor(model => model.PlaceofBirth, new {htmlAttributes = new {@class = "form-control"}})
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-md-12 col-sm-8">
                <div class="tab-pane tab-pane1 fade in active" id="Skill Details">
                    <div class="panel-group" id="accordion3">
