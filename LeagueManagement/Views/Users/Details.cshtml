                                        <div class="col-md-8">
                                            @Html.DisplayFor(model => model.Hobbies, new {htmlAttributes = new {@class = "form-control"}})
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            </div>
            
        }
    </div>
</div>


