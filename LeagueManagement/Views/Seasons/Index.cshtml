@model IEnumerable<LMEntities.Models.Season>

@{
    ViewBag.Title = "Index";
}

<div class="col-md-12 col-sm-12 mininumheight">
    <div class="table-responsive">
        <div class="form-group">
            <b> @Html.ActionLink("Add New Season", "Create", new { htmlAttributes = new { @class = "col-sm-12 control-label back" } })</b>
        </div>
        <div class="col-md-12 col-sm-12 mininumheight">
            <div class="table-responsive">
                <table class="col-md-12 table-bordered table-striped table-condensed cf">
                    <thead class="cf">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.LeagueId)
                            </th>
                            <th></th>
                        </tr>
                    </thead>
                    @foreach (var item in Model)
                    {
                        <tbody>
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Name)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.League.Name)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                </td>
                            </tr>
                        </tbody>
                    }
                </table>
            </div>
        </div>
    </div>
</div>