                        @html.dropdownlistfor(model => model.teamid, viewbag.teamid as ienumerable<selectlistitem>, "please select", htmlattributes: new { @class = "form-control" })
                      
                        @html.validationmessagefor(model => model.teamid, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.TitleId, htmlAttributes: new { @class = "col-sm-4 control-label" })
                    <div class="col-md-8">
                        @Html.DropDownListFor(model => model.TitleId, ViewBag.TitleId as IEnumerable<SelectListItem>, "Please Select", htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.TitleId, "", new { @class = "text-danger" })
                    </div>
                </div>

