@model IEnumerable<LMEntities.Models.Schedule>

@{
    ViewBag.Title = "Index";
}

<div class="col-md-12 col-sm-12 mininumheight">
    <div class="table-responsive">
        <div class="col-md-12 col-sm-12 mininumheight">

            @if (User.IsInRole("Admin"))
            {
                <div class="register">
                    <b> @Html.ActionLink("Add New Schedule", "Create", new { htmlAttributes = new { @class = "col-sm-12 control-label back" } })</b>

                </div>
            }
            <div class="table-responsive">
                <table class="table table-bordred table-striped">
                    <thead class="cf">
                        <tr>
                            <th class="numeric">
                                @Html.DisplayNameFor(model => model.GroundId)
                            </th>
                            <th class="numeric">
                                @Html.DisplayNameFor(model => model.SeasonId)
                            </th>

                            <th class="numeric">
                                @Html.DisplayNameFor(model => model.HomeTeamId)
                            </th>
                            <th class="numeric">
                                @Html.DisplayNameFor(model => model.VisitorTeamId)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.UmpireId)
                            </th>

                            <th class="numeric">
                                @Html.DisplayNameFor(model => model.ScheduleDate)
                            </th>
                            <th class="numeric">
                                @Html.DisplayNameFor(model => model.StartTime)
                            </th>
                            <th class="numeric">
                                @Html.DisplayNameFor(model => model.EndTime)
                            </th>
                            <th></th>

                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="numeric">
                                    @Html.ActionLink(item.Ground.Name, "Detail", "Grounds", new { id = item.Ground.Id }, new { target = "_blank" })
                                </td>
                                <td class="numeric">
                                    @Html.DisplayFor(modelItem => item.Season.Name)
                                </td>
                                <td class="numeric">
                                    @Html.ActionLink(item.Team.Name, "Detail", "Teams", new { id = item.Team.Id }, new { target = "_blank" })
                                </td>
                                <td class="numeric">
                                    @Html.ActionLink(item.Team1.Name, "Detail", "Teams", new { id = item.Team1.Id }, new { target = "_blank" })
                                </td>
                                <td class="numeric">
                                    @Html.ActionLink(item.Umpire.UserName, "Detail", "Umpires", new { id = item.Umpire.Id }, new { target = "_blank" })
                                </td>
                                <td class="numeric">
                                    @Html.DisplayFor(modelItem => item.ScheduleDate)
                                </td>
                                <td class="numeric">
                                    @Html.DisplayFor(modelItem => item.StartTime)
                                </td>
                                <td class="numeric">
                                    @Html.DisplayFor(modelItem => item.EndTime)
                                </td>


                                @if (User.IsInRole("Admin"))
                                {
                                    <td class="numeric">
                                        <a href="@Url.Action("Details", new {id = item.Id})">
                                            <i class="glyphicon glyphicon-eye-open btn btn-primary btn-xs"></i>
                                            <span class="sr-only">Details</span>
                                        </a>
                                        <a href="@Url.Action("Edit", new {id = item.Id})">
                                            <i class="glyphicon glyphicon-edit btn btn-primary btn-xs"></i>
                                            <span class="sr-only">Edit</span>
                                        </a>
                                        <a href="@Url.Action("Delete", new {id = item.Id})">
                                            <i class="glyphicon glyphicon-trash btn btn-danger btn-xs"></i>
                                            <span class="sr-only">Delete</span>
                                        </a>
                                    </td>
                                }

                                else
                                {
                                    <td class="numeric">
                                        <a href="@Url.Action("Details", new {id = item.Id})">
                                            <i class="glyphicon glyphicon-eye-open btn btn-primary btn-xs"></i>
                                            <span class="sr-only">Details</span>
                                        </a>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
