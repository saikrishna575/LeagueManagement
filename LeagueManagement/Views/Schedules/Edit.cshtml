@model LMEntities.Models.Schedule

@{
    ViewBag.Title = "Edit";
}

<div class="col-md-8 col-sm-8 mininumheight">
    <div id="loginbox" style="margin-top:10px;" class="mainbox col-md-9 col-md-offset-1 col-sm-9">

        @using (Html.BeginForm())
            {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                <h4>Edit Schedule</h4>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.Id)

                <div class="form-group">
                    @Html.LabelFor(model => model.SeasonId, "SeasonId", htmlAttributes: new { @class = "col-sm-4 control-label" })
                    <div class="col-md-8">
                        @Html.DropDownList("SeasonId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.SeasonId, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.HomeTeamId, "HomeTeamId", htmlAttributes: new { @class = "col-sm-4 control-label" })
                    <div class="col-md-8">
                        @Html.DropDownList("HomeTeamId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.HomeTeamId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.VisitorTeamId, "VisitorTeamId", htmlAttributes: new { @class = "col-sm-4 control-label" })
                    <div class="col-md-8">
                        @Html.DropDownList("VisitorTeamId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.VisitorTeamId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.UmpireId, htmlAttributes: new { @class = "col-sm-4 control-label" })
                    <div class="col-md-8">
                        @Html.DropDownListFor(model => model.UmpireId, ViewBag.Umpires as IEnumerable<SelectListItem>, "Please Select", htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.UmpireId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.GroundId, htmlAttributes: new { @class = "col-sm-4 control-label" })
                    <div class="col-md-8">
                        @Html.DropDownList("GroundId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.GroundId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.ScheduleDate, htmlAttributes: new { @class = "col-sm-4 control-label" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.ScheduleDate, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ScheduleDate, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.StartTime, htmlAttributes: new { @class = "col-sm-4 control-label" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.StartTime, new { htmlAttributes = new { @class = "form-control timepicker1" } })

                        @Html.ValidationMessageFor(model => model.StartTime, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @Html.LabelFor(model => model.EndTime, htmlAttributes: new { @class = "col-sm-4 control-label" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.EndTime, new { htmlAttributes = new { @class = "form-control timepicker1" } })
                        @Html.ValidationMessageFor(model => model.EndTime, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">

                    <div class="col-md-offset-4 col-md-10">
                        <div class="register">
                            @Html.ActionLink("Back", "Index")
                            <input type="submit" value="Save" class="btn btn-default create" />
                        </div>
                    </div>
                </div>

            </div>

        }


    </div>
</div>
@Html.Partial("_PartialStyle")

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
<script src="~/Scripts/jquery-ui.min.js"></script>
<link href="~/css/jquery-ui.min.css" rel="stylesheet" />


<script src="~/Scripts/jquery-ui-timepicker-addon.js"></script>
<link href="~/css/jquery-ui-timepicker-addon.css" rel="stylesheet" />

<script type="text/javascript">


$('#ScheduleDate').datepicker();

$('.timepicker1').timepicker();
</script>